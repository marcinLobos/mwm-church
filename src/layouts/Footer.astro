---
import ButtonLink from "@/components/ButtonLink";
import StyledText from "@/components/StyledText";
import SubscribeForm from "@/components/SubscribeForm";
import SocialMediaLinks from "@/components/SocialMediaLinks";
import { siteConfig } from "@/data/contentCollectionDataFetching";

const left = siteConfig?.data.footer?.left;
const form = siteConfig?.data.footer?.form;
const give = siteConfig?.data.footer?.give;

const RESEND_SEGMENT_ID = import.meta.env.RESEND_SEGMENT_ID;
const RESEND_API_KEY = import.meta.env.RESEND_API_KEY;
---


<footer class="bg-secondary text-secondary-foreground layout-base py-12 border-t border-white/10">
  <div class="grid gap-8 md:grid-cols-2">
    <section class="flex flex-col gap-8">
      <h2 class="text-2xl font-bold uppercase tracking-tighter">MWM Architekci</h2>
      {
        left?.sections &&
          left.sections.map((section) => (
            <div class="flex flex-col">
              <StyledText
                as="h3"
                variant="heading"
                className="pb-2 text-sm uppercase tracking-widest text-gray-500"
                set:html={section.heading}
              />
              <div class="text-lg font-light" set:html={section.description} />
            </div>
          ))
      }

      {
        left?.social && left.social.length > 0 && (
          <div class="pt-4">
            <SocialMediaLinks social={left.social} client:idle />
          </div>
        )
      }
    </section>

    <section class="flex flex-col justify-end md:items-end text-right">
       <div class="max-w-xs">
          <p class="text-xs text-gray-500 font-mono leading-relaxed">
            // STATUS: 2026_PROTOTYPE_ACTIVE <br/>
            // CORE: ASTRO_FRAMEWORK <br/>
            // DESIGN: MWM_REV_01
          </p>
          <p class="mt-4 italic text-sm text-gray-400">
            "Architektura to jedyna prawda o planecie."
          </p>
       </div>
    </section>
  </div>
</footer>









